    <div class="container">
        <h1>Tela de Edição</h1>
         {{#each post}}
                {{#dataValues}}
                    <form action="/atualizar" method="POST">
                        <div class="form-group">
                            <input type="hidden" name="id" class="form-control" id="nome" value="{{id}}">
                            <label for="nome">Nome:</label>
                            <input type="text" class="form-control" id="nome" placeholder="Digite o nome" value="{{nome}}">
                        </div>
                        <div class="form-group">
                            <label for="endereco">Endereço:</label>
                            <input type="text" class="form-control" id="endereco" placeholder="Digite o endereço" value="{{endereco}}">
                        </div>
                        <div class="form-group">
                            <label for="bairro">Bairro:</label>
                            <input type="text" class="form-control" id="bairro" placeholder="Digite o bairro" value="{{bairro}}">
                        </div>
                        <div class="form-group">
                            <label for="cep">CEP:</label>
                            <input type="text" class="form-control" id="cep" placeholder="Digite o CEP" value="{{cep}}">
                        </div>
                        <div class="form-group">
                            <label for="cidade">Cidade:</label>
                            <input type="text" class="form-control" id="cidade" placeholder="Digite a cidade" value="{{cidade}}">
                        </div>
                        <div class="form-group">
                            <label for="estado">Estado:</label>
                            <input type="text" class="form-control" id="estado" placeholder="Digite o estado" value="{{estado}}">
                        </div>
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </form>
                {{/dataValues}}
            {{/each}}
                </div>
